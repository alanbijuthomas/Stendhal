<achievement identifier="fight.general.rats">
	<title>Rat Hunter</title>
	<category>Fighting</category>
	<description>Kill 15 rats</description>
	<basescore>1</basescore>
	<active>yes</active>
	<condition constructor="PlayerHasKilledNumberOfCreaturesCondition">
		<argument>rat</argument>
		<argument>15</argument>
	</condition>
</achievement>

